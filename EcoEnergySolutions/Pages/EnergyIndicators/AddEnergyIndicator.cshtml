@page
@model EcoEnergySolutions.Pages.EnergyIndicators.AddEnergyIndicatorModel
@{
	ViewData["Title"] = "New Energy Indicator";
}


<h1>Add new Entry</h1>
<form method="post">
	<div class="form-group">
		<label asp-for="NewEntry.Id"></label>
		<input asp-for="NewEntry.Id" class="form-control" />
		<span asp-validation-for="NewEntry.Id"></span>
	</div>
	<div class="form-group">
		<label asp-for="NewEntry.Year"></label>
		<input asp-for="NewEntry.Year" class="form-control" />
		<span asp-validation-for="NewEntry.Year"></span>
	</div>
	<div class="form-group">
		<label asp-for="NewEntry.NetProduction"></label>
		<input asp-for="NewEntry.NetProduction" class="form-control" />
		<span asp-validation-for="NewEntry.NetProduction"></span>
	</div>
	<div class="form-group">
		<label asp-for="NewEntry.GasolineConsumption"></label>
		<input asp-for="NewEntry.GasolineConsumption" class="form-control" />
		<span asp-validation-for="NewEntry.GasolineConsumption"></span>
	</div>
	<div class="form-group">
		<label asp-for="NewEntry.ElectricDemand"></label>
		<input asp-for="NewEntry.ElectricDemand" class="form-control" />
		<span asp-validation-for="NewEntry.ElectricDemand"></span>
	</div>
	<div class="form-group">
		<label asp-for="NewEntry.AvailableProduction"></label>
		<input asp-for="NewEntry.AvailableProduction" class="form-control" />
		<span asp-validation-for="NewEntry.AvailableProduction"></span>
	</div>
	<button type="submit" class="btn btn-primary">Add</button>
</form>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}