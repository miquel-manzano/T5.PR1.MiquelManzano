@page "{id:int}"
@model EcoEnergySolutions.Pages.EnergyIndicators.DeleteEnergyIndicatorModel
@{
	ViewData["Title"] = "Delete Energy Indicator";
}


<h3>Are you sure you want to delete this Energy Indicator?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnergyIndicator.Year)
        </dt>
        <dd class="col-sm-10">
            @Model.EnergyIndicator.Year
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnergyIndicator.NetProduction)
        </dt>
        <dd class="col-sm-10">
            @Model.EnergyIndicator.NetProduction
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnergyIndicator.GasolineConsumption)
        </dt>
        <dd class="col-sm-10">
            @Model.EnergyIndicator.GasolineConsumption
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnergyIndicator.ElectricDemand)
        </dt>
        <dd class="col-sm-10">
            @Model.EnergyIndicator.ElectricDemand
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnergyIndicator.AvailableProduction)
        </dt>
        <dd class="col-sm-10">
            @Model.EnergyIndicator.AvailableProduction
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="EnergyIndicator.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/EnergyIndicators/EnergyIndicatorsTable">Back</a>
    </form>
</div>