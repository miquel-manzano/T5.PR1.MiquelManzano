@page "{id:int}"
@model EcoEnergySolutions.Pages.Simulations.DeleteSimulationsModel
@{
	ViewData["Title"] = "Delete Simulation";
}


<h3>Are you sure you want to delete this Simulation?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Simulation.Type)
        </dt>
        <dd class="col-sm-10">
            @Model.Simulation.Type
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Simulation.SunHours)
        </dt>
        <dd class="col-sm-10">
            @Model.Simulation.SunHours
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Simulation.WindSpeed)
        </dt>
        <dd class="col-sm-10">
            @Model.Simulation.WindSpeed
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Simulation.WaterFlow)
        </dt>
        <dd class="col-sm-10">
            @Model.Simulation.WaterFlow
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Simulation.Ratio)
        </dt>
        <dd class="col-sm-10">
            @Model.Simulation.Ratio
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Simulation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Simulations/SimulationsTable">Back</a>
    </form>
</div>