@page "{id:int}"
@model EcoEnergySolutions.Pages.WaterConsumptions.DeleteWaterConsumptionModel
@{
	ViewData["Title"] = "Delete Water Consumption";
}


<h3>Are you sure you want to delete this Water Consumption?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterConsumption.County)
        </dt>
        <dd class="col-sm-10">
            @Model.WaterConsumption.County
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterConsumption.Population)
        </dt>
        <dd class="col-sm-10">
            @Model.WaterConsumption.Population
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterConsumption.Year)
        </dt>
        <dd class="col-sm-10">
            @Model.WaterConsumption.Year
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterConsumption.Consumption)
        </dt>
        <dd class="col-sm-10">
            @Model.WaterConsumption.Consumption
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="WaterConsumption.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/WaterConsumptions/WaterConsumptionsTable">Back</a>
    </form>
</div>