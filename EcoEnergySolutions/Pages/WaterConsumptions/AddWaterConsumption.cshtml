@page
@model EcoEnergySolutions.Pages.WaterConsumptions.AddWaterConsumptionModel
@{
	ViewData["Title"] = "New Water Consumptions";
}



<h1>Add new Entry</h1>
<form method="post">
	<div class="form-group">
		<label asp-for="NewEntry.County"></label>
		<input asp-for="NewEntry.County" class="form-control" />
		<span asp-validation-for="NewEntry.County"></span>
	</div>
	<div class="form-group">
		<label asp-for="NewEntry.Population"></label>
		<input asp-for="NewEntry.Population" class="form-control" />
		<span asp-validation-for="NewEntry.Population"></span>
	</div>
	<div class="form-group">
		<label asp-for="NewEntry.Year"></label>
		<input asp-for="NewEntry.Year" class="form-control" />
		<span asp-validation-for="NewEntry.Year"></span>
	</div>
	<div class="form-group">
		<label asp-for="NewEntry.Consumption"></label>
		<input asp-for="NewEntry.Consumption" class="form-control" />
		<span asp-validation-for="NewEntry.Consumption"></span>
	</div>
	<button type="submit" class="btn btn-primary">Add</button>
</form>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}